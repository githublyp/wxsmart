/**index.wxss**/
.panel{
  display: flex;   
  flex-direction:row;  
  flex-wrap: nowrap;  
  background-color: #666;
  border-radius: 6px;  
  align-items:center;
  justify-content:space-between;  
}
.col-33{    
  display: flex;
  flex-grow:1;
  flex-direction: column;  
  height: 50px;
  line-height: 25px; 
  padding: 5px 0px;
  text-align: center;       
}
.col-33 image{    
  width: 30px;
  margin: auto;   
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.usermotto {
  margin-top: 200px;
}
.body{
    padding-left: 30rpx;
    padding-right: 30rpx;
    overflow: hidden;
    height:30px;
}
